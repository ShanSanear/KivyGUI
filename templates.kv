<DefaultText@Widget>:
    background_color: [0.5, 0.5, 0.5, 1]
    font_size: '14sp'
    text_size: self.size
    text: "0"
    size_hint: None, None
    height: dp(30)
    halign: 'left'
    valign: 'center'
    width: dp(50)

<DefaultRow@BoxLayout>:
    size_hint_y: None
    size_hint_x: None
    height: 30
    #canvas.before:
    #    Color:
    #        rgba: 1, 1, 0.5, 1
    #    Rectangle:
    #        size: self.size
    #        pos: self.pos

<DefaultRecycleBoxLayout@RecycleBoxLayout>:
    default_size: None, dp(30)
    default_size_hint: 1, None
    size_hint_y: None
    height: self.minimum_height
    orientation: 'vertical'
    spacing: dp(2)

<LabelInput@Label+DefaultText>:
    id: skill_attribute_label
    readonly: True
    halign: 'center'

<DefaultButton@Button+DefaultText>:
    text: "Dummy text"

<DefaultTextInput@TextInput+DefaultText>:
    readonly: False

<ColorIt@Widget>:
    canvas.before:
        Color:
            rgba: 0.22, 0.22, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos

<ColorIt2@Widget>:
    canvas.before:
        Color:
            rgba: 0.22, 0.22, 0.22, 1
        Rectangle:
            size: self.size
            pos: self.pos


<TextInputWithLabelAbove@BoxLayout+ColorIt>:
    orientation: "vertical"
    label_above_text: ""
    text_input_text : text_input.text
    LabelInput:
        text: root.label_above_text
    DefaultTextInput:
        id: text_input
        text: root.text_input_text

<BetweenTextInputWithLabelAbove@BoxLayout+ColorIt2>:
    orientation: "vertical"
    text_label : ""
    LabelInput:
        id: text_input
        text: root.text_label
<MultilineLabel@ScrollView>:
    label_text: ""
    Label:
        size_hint_y: None
        text_size: (self.width, None)
        text: root.label_text
        height: self.texture_size[1]

<PopupContent@BoxLayout>:
    id: content
    orientation: "vertical"
    content_text: "TEST TEXT"
    MultilineLabel:
        id: content_label
        label_text: root.content_text
    Button:
        text: "Close"
        on_press: root.parent.parent.parent.dismiss()


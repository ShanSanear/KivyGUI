<DefaultText@Widget>:
    background_color: [0.5, 0.5, 0.5, 1]
    font_size: '14sp'
    text_size: self.size
    text: "0"
    size_hint: None, None
    height: dp(30)
    halign: 'left'
    valign: 'center'
    width: dp(50)

<DefaultRow@BoxLayout>:
    size_hint_y: None
    size_hint_x: None
    height: 30
    #canvas.before:
    #    Color:
    #        rgba: 1, 1, 0.5, 1
    #    Rectangle:
    #        size: self.size
    #        pos: self.pos

<DefaultRecycleBoxLayout@RecycleBoxLayout>:
    default_size: None, dp(30)
    default_size_hint: 1, None
    size_hint_y: None
    height: self.minimum_height
    orientation: 'vertical'
    spacing: dp(2)

<LabelInput@Label+DefaultText>:
    id: skill_attribute_label
    readonly: True
    halign: 'center'

<DefaultButton@Button+DefaultText>:
    text: "Dummy text"

<DefaultTextInput@TextInput+DefaultText>:
    readonly: False



<TextInputWithLabelAbove@BoxLayout>:
    orientation: "vertical"
    label_above_text: ""
    text_input_text : text_input.text
    LabelInput:
        text: root.label_above_text
    DefaultTextInput:
        id: text_input
        text: root.text_input_text

<BetweenTextInputWithLabelAbove@BoxLayout>:
    orientation: "vertical"
    text_label : ""
    LabelInput:
        text: ""
    LabelInput:
        id: text_input
        text: root.text_label

<DefaultRecycleBoxLayout@RecycleBoxLayout>:
    default_size: None, dp(30)
    default_size_hint: 1, None
    size_hint_y: None
    height: self.minimum_height
    orientation: 'vertical'
    spacing: dp(2)
<Test>:
    id: test_box_layout
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            size: self.size
            pos: self.pos
    spacing: 0
    rv: rv
    rv_header: rv_header
    orientation: 'vertical'
    RecycleView:
        size_hint_y: None
        height: dp(30)
        id: rv_header
        viewclass: 'HeaderRow'
        DefaultRecycleBoxLayout:
            id: rv_header_box_layout
    RecycleView:
        id: rv
        viewclass: 'Row'
        DefaultRecycleBoxLayout:
            id: rv_box_layout

    BoxLayout:
        Button:
            on_press: root.update_rv_data(rv_box_layout)
            text: "Update mods"
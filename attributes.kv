#:include templates.kv

<AttributeTextInput@TextInput+DefaultText>:
    id: skill_attribute_label
    readonly: True
    

<LabelInput@Label+DefaultText>:
    id: skill_attribute_label
    readonly: True
    halign: 'center'

<HeaderRow@DefaultRow>:
    value: attr_val.text
    attr: attr_name.text
    attr_mod_val: attr_mod.text
    LabelInput:
        id: attr_name
        text: root.attr
        halign: 'right'
        width: dp(100)
    LabelInput:
        id: attr_val
        text: root.value
    LabelInput:
        id: attr_mod
        text: root.attr_mod_val

<Row@DefaultRow>:
    value: attr_val.text
    attr: attr_name.text
    attr_mod_val: attr_mod.text
    LabelInput:
        id: attr_name
        text: root.attr
        halign: 'right'
        width: dp(100)
    AttributeTextInput:
        id: attr_val
        text: root.value
        readonly: False
    AttributeTextInput:
        id: attr_mod
        text: root.attr_mod_val

<Test>:
    id: test_box_layout
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            size: self.size
            pos: self.pos
    spacing: 0
    rv: rv
    rv_header: rv_header
    orientation: 'vertical'
    RecycleView:
        size_hint_y: None
        height: dp(30)
        id: rv_header
        viewclass: 'HeaderRow'
        DefaultRecycleBoxLayout:
            id: rv_header_box_layout
    RecycleView:
        spacing: dp(4)
        id: rv
        viewclass: 'Row'
        DefaultRecycleBoxLayout:
            id: rv_box_layout

    BoxLayout:
        Button:
            on_press: root.update_rv_data(rv_box_layout)
            text: "Update mods"
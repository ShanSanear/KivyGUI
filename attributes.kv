

<SkillTextInput@TextInput>:
    id: skill_attribute_label
    readonly: True
    background_color: [0.5, 0.5, 0.5, 1]
    font_size: '14sp'
    text_size: self.size
    text: "0"
    size_hint: None, None
    height: dp(30)
    halign: 'left'
    valign: 'center'

<Row@BoxLayout>:
    size_hint_y: None
    size_hint_x: None
    height: 30
    #canvas.before:
    #    Color:
    #        rgba: 1, 1, 0.5, 1
    #    Rectangle:
    #        size: self.size
    #        pos: self.pos
    value: attr_val.text
    attr: attr_name.text
    attr_mod_val: attr_mod.text
    SkillTextInput:
        id: attr_name
        text: root.attr
    SkillTextInput:
        id: attr_val
        text: root.value
        readonly: False
    SkillTextInput:
        id: attr_mod
        text: root.attr_mod_val

<Test>:
    id: test_box_layout
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            size: self.size
            pos: self.pos
    rv: rv
    orientation: 'vertical'
    RecycleView:
        id: rv
        viewclass: 'Row'
        RecycleBoxLayout:
            id: rv_box_layout
            default_size: None, dp(30)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(2)
    BoxLayout:
        Button:
            on_press: root.update_rv_data(rv_box_layout)
            text: "Update mods"
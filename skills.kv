<SkillsHeader@BoxLayout>:
    size_hint_x: root.size_hint_x
    size_hint_y: None
    orientation: "horizontal"
    height: 30
    Label:
        text: "Skill name"
    Label:
        text: "Attribute"
    Label:
        text: "End mod"
    Label:
        text: "attr mod"
    Label:
        text: "rank"
    Label:
        text: "misc mod"
        
<OptionsContainer@BoxLayout>:
    id: options_container

    BoxLayout:
        orientation: 'horizontal'
        Button:
            id: add_skill_button
            text: "Add new skill"
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            on_press: options_container.add_new_skill(app.root.ids.skill_name.text, app.root.ids.skill_attribute.text, app.root.ids.obj)
        Button:
            id: callback_info_button
            text: "Callback"
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            on_press: options_container.callback_info()

<SkillTextInput@TextInput>:
    id: skill_attribute_label
    readonly: True
    background_color: [0.5, 0.5, 0.5, 1]
    font_size: 14
    text_size: self.size
    text: "0"
    size_hint: 0.15, None
    height: 30
    halign: 'left'
    valign: 'center'

<SingleSkillLayout@BoxLayout>:
    orientation: 'horizontal'
    size_hint: 1, None
    height: 30
    spacing: 10
    Label:
        id: skill_name_label
        text_size: self.size
        text: "LabelText"
        size_hint: 0.25, None
        halign: 'right'
        valign: 'center'
        height: root.height
    SkillTextInput:
        id: skill_attribute_label
    SkillTextInput:
        id: skill_end_value
    SkillTextInput:
        id: skill_attribute_mod
    SkillTextInput:
        id: skill_rank
    SkillTextInput:
        id: skill_misc_mod

<MainSkillContainer@BoxLayout>:
    main_skill_container: main_skill_container
    skill_name : skill_name
    skill_attribute : skill_attribute
    id: main_skill_container
    orientation: 'vertical'
    spacing: 5
    SkillsHeader:
        id: skills_header
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: skill_name
            text: "Dummy skill name"
        TextInput:
            id: skill_attribute
            text: "STR"